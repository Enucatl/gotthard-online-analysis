#/bin/bash

. config.txt

if [ $# -lt 3 ]
    then echo "Usage: $0 [N_FRAMES] [EXP_TIME] [PERIOD] [OUTDIR] [CLIENT_IP] [CLIENT_MAC]"
		exit
fi

echo capture $1 frames with $2 seconds exposere each $3 seconds
echo outdir: $4
echo clientIp: $5
echo clientMac: $6

$P settingsdir  $SETTINGS_DIR
$P caldir $SETTINGS_DIR
$P outdir $4
$P settings veryhighgain
$P frames $1
$P cycles 1
$P exptime $2
$P period $3

$P reg 26 0  #of ffff if you read from CPU
$P reg 0x19  0x322113 #clean the fifo
$P reg 0x19  0x022113
$P vhighvoltage $VOLTAGE
$P clientip $5
$P clientmac $6
$P servermac 00:aa:bb:cc:dd:ee

$P configuremac 1
$P enablefwrite 1

$P receiver start

echo script $0 done

